      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="sweetalert2/dist/sweetalert2.all.min.js"></script>
<script src="sweetalert2/dist/sweetalert2.min.js"></script>
<link rel="stylesheet" href="sweetalert2/dist/sweetalert2.min.css">

<style>
  .inputbox1{
    border-radius:25px;
    width:380px;
    height:50px;
    margin:15px;
    border:2px solid green;
    background-color:green;
    color:white
}
.inputbox1:hover{

color:white;
font-weight:bolder;

}
.clk-login1{
color:green;
text-decoration: none;

}
input:hover{
  box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);

}

</style>


</head>

<body>
  <section id="title">
    <div class="container-fluid">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/"><img src="images/logo.jpg" alt=""></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/index">Back</a>
            </li>
          </ul>
        </div>
      </nav>
      <!-- Title -->
      <div class="row">
        <div class="col-lg-6">
          <img class="title-image" src="images/background3.jpg" alt="">

        </div>
        <div class="col-lg-6">
          <div class="contentbox">
            <div class="formbox">
              <p>
              <h2 class="headline-login1"><a class="clk-login1" href="#">SIGN UP</a></h2>
              </p>

      <form action="/register" method="POST" novalidate>
        <div class="inputbox">
          <span>Name</span>
          <input type="text" name="user_name" id="_rname" class="form-control" placeholder="Name"  required>
        </div>

        <div class="inputbox">
          <span>EmailID</span>
          <input type="email" name="user_email" id="_remail" class="form-control" placeholder="Email"  required>
          
        </div>
        <div class="inputbox">
          <span>Username</span>
          <input type="text" name="username" id="_remail" class="form-control" placeholder="Username"  required>
          <p style="color:red">Note : Please do not use any Symbols like ".", "#", "$", "[", or "]"</p>
        </div>
        <div class="inputbox">
            <span>Mobile Number</span>
              <input type="tel" name="phone" placeholder="Mobile Number" >
        </div>

        <div class="inputbox">
            <span><label for="cars">Type Of Registration</label></span>
                  <select name="role" id="role">
                    <option >Select Option Below</option>
                    <option value="Incubatee">Incubatee</option>
                    <option value="E-CellMember">E-Cell Member</option>
                    
                  </select>
        </div>

        <div class="inputbox">
          <span> password</span>
          <input type="password" name="user_pass" id="_rpass" class="form-control" placeholder="Password" required>
        </div>


        <div class="inputbox">
          <span>Confirm password</span>
          <input type="password" name="cuser_pass" id="c_rpass" class="form-control" placeholder="Confirm Password" required>
        </div>

        <div>
          <input type="submit" name="" class="inputbox1" value="Register">
        </div>
         <div style="color :red;" role="alert"  id="status">
                   <%=message%>
              </div>

        <div >
          <p class="p1">Already have an account?</p><a href= "/login-register">Login</a>
        </div>

      </form>
    </div>
  
            </div>
          </div>



        </div>
      </div>
    </div>


  </section>

<% if (message =='Email /username Already in use !') { %>
<script type="text/javascript">
Swal.fire({
  icon: 'error',
  title: 'Registration Failed',
  text: 'This Email/username is already in use',
  footer: 'Try Another uniuque one !'
})
</script>
<% } %>
<%  if (message =='Password and Confirm Password Does not Match') { %>
<script type="text/javascript">
Swal.fire({
  icon: 'error',
  title: 'Registration Failed',
  text: 'Password and Confirm Password Does not match !',
  footer: 'Try Again !'
})
</script>
<% } %>
</body>

</html>