          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/index">Back</a>
            </li>
          </ul>
        </div>
        
      </nav>
      <!-- Title -->
      <div class="row">
        <div class="col-lg-6">
          <img class="title-image" src="images/background4.jpg" alt="">

        </div>
        <div class="col-lg-6">
          <div class="contentbox">

            <div class="formbox">
              <p>
              <h2><a class="clk-login1" href="#">LOGIN</a></h2>
              </p>
           
             <form action="/login-register" method="POST">

          <div class="inputbox">
            <span>Username</span>
            <input type="text" name="username" id="_email" onkeyup="trackChange(this.value)" class="form-control" placeholder="example: prgayake" rnodeequired>
             <p style="color:red">Note : Please do not use any Symbols like ".",<br> "#", "$", "[", or "]" </p>
          </div>
          <script>
            function trackChange(value) {
            for (let i = 0; i < value.length; i++) 
            {
            if(value[i]=='$' || value[i]=='#' || value[i]=='.' || value[i]=='[' || value[i]==']')
            {
                alert("Invalid Username");
            }
          }
          }</script>

          <div class="inputbox">
            <span>Password</span>
            <input type="password" name="user_pass" id="_pass" class="form-control" placeholder="Password" required>
          </div>

          
              <div style="color :red;" role="alert"  id="status">
                   <%=message%>
              </div>

    
          <div>
            <input type="submit" class="inputbox1" name="" value="Sign in">
          </div>
          
            
          <div >
            <p class="p1">Don't have an account?</p><a class="inputbox" href="/register">Sign up</a>
          </div>

          <div class="inputbox">
            <br>
            <a href="/forgetpass">Forgot Password</a>
          </div>
        </form>
            </div>
          </div>



        </div>
      </div>
    </div>


  </section>

